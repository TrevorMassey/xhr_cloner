  {
    "name": "XHR Cloner",
    "version": "1.0",
    "description": "Clone XHR Data!",
    "permissions": [
        "tabs", "storage", 
        "activeTab", "webRequest", 
        "declarativeContent",
        "http://127.0.0.1:8000/api/*"
    ],
    "content_scripts": [{
        "matches": [
           "<all_urls>"
        ],
        "js": [
            "content_scripts/inject_script.js"
        ],
        "run_at": "document_start",
        "all_frames": true
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "options_ui": {
    "page": "options.html",
    "open_in_tab": true
    },
    "externally_connectable": {
        // Chrome won't let you add <all_urls> here,
        // so you need to manually insert each domain you want
        "matches": [
            "*://*.google.com/*",
            "*://*.github.com/*",
            "*://*.kaggle.com/*",
            "*://*.youtube.com/*",
            "*://*.amazon.com/*",
            "*://*.yahoo.com/*",
            "*://*.quotemedia.com/*",
        ]
    },
    "web_accessible_resources": [
        "content_scripts/monkey_patch.js",
        "content_scripts/delete_fetch.js"
    ],
    "manifest_version": 2
  }
